<%- | String            $ifname,
      Optional[String]  $mac = '',
      Optional[Integer] $mtu = 1500,
      Optional[String]  $drivername = '',
| -%>
network:
  version: 2
  renderer: networkd
  ethernets:
<% if $drivername == '' or $mac == '' { -%>
    <%= $ifname %>:
      accept-ra: no
<% } else { -%>
    <%= $ifname %>:
      match:
        driver: "<%= $drivername %>"
        macaddress: "<%= $mac %>"
      mtu: <%= $mtu %>
      accept-ra: no
<% } -%>

